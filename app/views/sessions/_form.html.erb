<div class="well">
  <%= form_for '/login' do %>
    <div class="control-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <%= text_field_tag :password %>
    </div>
    <%= submit_tag "Login", class: "btn btn-primary" %>
  <% end %>
</div>