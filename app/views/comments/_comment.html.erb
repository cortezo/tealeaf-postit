<% show_post ||= false %>
<div class="row">
  <div class='span1 well text-center'>
    <div>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: "post", remote: true do %>
          <i class="icon-arrow-up"></i>
        <% end %>
      <% end %>
    </div>
    <div>
      <span id='post_<%= comment.post.slug %>_comment_<%= comment.id %>_vote'><%= comment.total_votes %></span>
    </div>
    <div>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment,  vote: false), method: "post", remote: true do %>
          <i class="icon-arrow-down"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="well span8">
    <em>"<%= comment.body %>"</em> 
      <% if show_post %>
        on
        <%= link_to comment.post.title, post_path(comment.post) %>
      <% end %>
    <br/>
    <br/>
    <p>
      <span class='quiet'>by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
      <small>at <%= fix_date_time_format(comment.created_at) %></small>
    </p>
  </div>
</div>
