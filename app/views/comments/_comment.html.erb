<% show_post ||= false %>
<div class="row">
  <
  <div class='span1 well text-center'>
    <div>
      <%= link_to vote_post_comment_path(comment, post_id: comment.post.id, vote: true), method: "post" do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    </div>
    <div>
      <%= comment.total_votes %> Votes
    </div>
    <div>
      <%= link_to vote_post_comment_path(comment, post_id: comment.post.id,  vote: false), method: "post" do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div>
  </div>
  <div class="well span8">
    <em>"<%= comment.body %>"</em> 
      <% if show_post %>
        on
        <%= link_to comment.post.title, post_path(comment.post) %>
      <% end %>
    <br/>
    <br/>
    <p>
      <span class='quiet'>by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
      <small>at <%= fix_date_time_format(comment.created_at) %></small>
    </p>
  </div>
</div>
