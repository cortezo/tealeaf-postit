<%= render 'shared/content_title', title: "Create a new category" %>

<% if @category.errors.any? %>
  <%= render 'shared/errors', object: @category %>
<% end %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    </br>
    <%= f.submit 'Create Category', class: "btn btn-success" %>
  <% end %>
</div>